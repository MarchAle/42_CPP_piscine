NAME := BSP

SRCS := 	main.cpp	\
			Fixed.cpp	\
			Point.cpp	\
			bsp.cpp		\
		
INCLUDES :=	Fixed.hpp	\
			Point.hpp
			
OBJS := $(SRCS:.cpp=.o)

CC := c++
CFLAGS := -Wall -Wextra -Werror -std=c++98

all : $(NAME)

$(NAME) : $(OBJS) $(INCLUDES) Makefile
		$(CC) $(OBJS) -o $(NAME)

clean :
		rm -rf $(OBJS)

fclean : clean
		rm -rf $(NAME)

re : fclean all

.PHONY : all clean fclean re